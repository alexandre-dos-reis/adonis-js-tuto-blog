{
  "name": "adonis-js-tuto",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/explicit-member-accessibility": "off"
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@faker-js/faker": "^6.3.1",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.7",
    "@symfony/webpack-encore": "^2.0.0",
    "@types/codemirror": "^5.60.5",
    "@types/lodash": "^4.14.182",
    "@types/preact-custom-element": "^4.0.1",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.1.0",
    "@adonisjs/core": "^5.7.5",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/mail": "^8.0.1",
    "@adonisjs/repl": "^3.1.10",
    "@adonisjs/session": "^6.2.2",
    "@adonisjs/shield": "^7.0.10",
    "@adonisjs/view": "^6.1.4",
    "@hotwired/turbo": "^7.1.0",
    "@popperjs/core": "^2.11.5",
    "@types/dom-speech-recognition": "^0.0.1",
    "@types/marked": "^4.0.3",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "codemirror": "^5.65.3",
    "lodash": "^4.17.21",
    "luxon": "^2.3.2",
    "marked": "^4.0.15",
    "mysql": "^2.18.1",
    "phc-argon2": "^1.1.3",
    "preact": "^10.7.2",
    "preact-custom-element": "^4.2.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
